@model Windgram.Identity.STS.Models.Account.LoginViewModel
@{
    ViewData["Title"] = "登录";
    Layout = "~/Views/Shared/_LayoutAccount.cshtml";
}

<h4>
    登录
</h4>

<partial name="_ValidationSummary" />
@if (Model.EnableLocalLogin)
{
    <form asp-route="Index">
        <input type="hidden" asp-for="ReturnUrl" />
        <div class="form-group">
            <label asp-for="Email"></label>
            <input class="form-control" asp-for="Email" autofocus placeholder="邮箱地址">
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input type="password" class="form-control" asp-for="Password" autocomplete="off">
        </div>
        @if (Model.AllowRememberLogin)
        {
            <div class="form-group form-check">
                <label asp-for="RememberLogin">
                    <input asp-for="RememberLogin" class="form-check-input">
                    记住密码
                </label>
            </div>
        }
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-block" name="button" value="login">登录</button>
        </div>
        <div class="form-group">
            <div class="d-flex justify-content-between">
                <a asp-area="" asp-controller="Register" asp-action="Index" class="btn btn-link">注册新账号</a>
                <a asp-area="" asp-controller="ForgotPassword" asp-action="Index" class="btn btn-link">忘记密码?</a>
            </div>
        </div>
    </form>
}
@if (Model.VisibleExternalProviders.Any())
{
    <div>
        @foreach (var provider in Model.VisibleExternalProviders)
        {
            <a class="btn btn-outline-primary btn-block"
               asp-controller="ExternalLogin"
               asp-action="Challenge"
               asp-route-provider="@provider.AuthenticationScheme"
               asp-route-returnUrl="@Model.ReturnUrl">
                Continue with @provider.DisplayName
            </a>
        }
    </div>
}
@if (!Model.EnableLocalLogin && !Model.VisibleExternalProviders.Any())
{
    <div class="alert alert-warning">
        <strong>Invalid login request</strong>
        There are no login schemes configured for this client.
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
