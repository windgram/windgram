@using Microsoft.AspNetCore.Identity;
@using Microsoft.AspNetCore.Mvc.Localization
@using Windgram.Identity.ApplicationCore.Domain.Entities;

@inject IViewLocalizer Localizer
@inject SignInManager<UserIdentity> SignInManager
@inject UserManager<UserIdentity> UserManager
@{

    var avatarUrl = User.FindFirst(IdentityModel.JwtClaimTypes.Picture)?.Value;
    var displayName = User.FindFirst(IdentityModel.JwtClaimTypes.NickName)?.Value ?? User.Identity.Name;
}
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm  navbar-dark bg-primary mb-3">
        <div class="container">
            <a class="navbar-brand" href="/">Windgram</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse mr-auto" id="navigationBar">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        <a class="nav-link active" asp-action="Index" asp-controller="Home">@Localizer["Home"]</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            @if (!string.IsNullOrEmpty(avatarUrl))
                            {
                                <img src="@avatarUrl" style="height:2rem;width:auto;border-radius:50%" />
                            }
                            @displayName
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" asp-action="Logout" asp-controller="Account">@Localizer["Logout"]</a>
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>


