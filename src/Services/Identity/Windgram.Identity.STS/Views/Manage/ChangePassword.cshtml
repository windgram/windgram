@model Windgram.Identity.STS.Models.Manage.ChangePasswordViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{ ViewData["Title"] = Localizer["Title"];}


<h3>
    @Localizer["Title"]
</h3>
<p class="text-muted">
    @Localizer["Description"]
</p>

@await Html.PartialAsync("_ValidationSummary")

@await Html.PartialAsync("_StatusMessage", ViewData["StatusMessage"])

<div class="row">
    <div class="col-sm-12 col-md-10 col-lg-7 col-xl-5">
        <form asp-action="ChangePassword">
            <div class="form-group">
                <label asp-for="CurrentPassword" class="control-label">@Localizer["CurrentPassword"]</label>
                <input asp-for="CurrentPassword" class="form-control" />
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label">@Localizer["NewPassword"]</label>
                <input asp-for="NewPassword" class="form-control" />
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmPassword" class="control-label">@Localizer["ConfirmPassword"]</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">@Localizer["Submit"]</button>
                <a asp-action="Index" class="btn btn-link">@Localizer["Back"]</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
